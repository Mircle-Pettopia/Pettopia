<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.yedam.pettopia.user.mapper.UserMapper">
 	<select id="getUserList" resultType="UserVO">
        SELECT *
        FROM member
    </select>
 	
 	<!-- 회원가입 -->
 	<!-- sign_path : 가입경로 -->
    <insert id="insertUser">
        INSERT INTO member
            (email, pw, name, phone, post, addr, addr_detail, sign_path, outYn, role)
        VALUES
            (#{email}, #{pw}, #{phone}, #{post}, #{addr}, #{addrDetail}, #{signPath}, 'N', #{USER})
    </insert>
    
    <!-- 회원 정보 가져오기 -->
    <select id="getUserByEmail" resultType="UserVO">
        SELECT *
        FROM member
        WHERE email = #{email}
    </select>
    
    <select id="getUserById" resultType="UserVO">
        SELECT *
        FROM member
        WHERE id = #{id}
    </select>
    
 </mapper>